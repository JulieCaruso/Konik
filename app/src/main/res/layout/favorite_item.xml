<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_l"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/favorite_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_subtitle" />

        <TextView
            android:id="@+id/favorite_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>

    <ImageView
        android:id="@+id/favorite_item_amazon_url"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_margin="@dimen/space_l"
        android:src="@drawable/ic_shop_black_48dp" />

    <ImageView
        android:id="@+id/favorite_item_delete"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_margin="@dimen/space_l"
        android:src="@drawable/ic_close_black_48dp" />

</LinearLayout>